# ===========================================
# RKRoots Backend - Local Development Config
# ===========================================
# Copy this file to .env and update values as needed

NODE_ENV=development
PORT=3000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# Sentry (optional - for error tracking)
# Leave empty for local development
SENTRY_DSN=

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Local Docker defaults - no changes needed for local dev
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=rkroots

# Connection pool settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Test database (uses port 5433)
DB_TEST_PORT=5433
DB_TEST_NAME=rkroots_test

# ===========================================
# Redis (optional for local dev)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# JWT Authentication
# ===========================================
# IMPORTANT: Change these in production!
JWT_SECRET=local-dev-secret-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=local-dev-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# AWS (optional for local dev)
# ===========================================
# Leave empty for local development - use mock implementations
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ===========================================
# OAuth Providers (optional for local dev)
# ===========================================
# Google OAuth - get credentials from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Apple OAuth - get credentials from Apple Developer Portal
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ===========================================
# Firebase (optional for local dev)
# ===========================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
